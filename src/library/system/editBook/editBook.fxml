<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.102" fx:controller="library.system.editBook.EditBookController">
   <children>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="300.0" prefWidth="350.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="15.0">
               <children>
                  <JFXTextField fx:id="idField" labelFloat="true" promptText="Book ID" />
                  <JFXTextField fx:id="titleField" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Title" />
                  <JFXTextField fx:id="authorField" labelFloat="true" layoutX="10.0" layoutY="41.0" promptText="Author" />
                  <JFXTextField fx:id="publisherField" labelFloat="true" layoutX="10.0" layoutY="72.0" promptText="Pulblisher" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <JFXButton fx:id="updateBookInfo" onAction="#saveBookInfo" prefHeight="40.0" prefWidth="120.0" text="Save" />
                        <JFXButton fx:id="cancelBtn" layoutX="100.0" layoutY="38.0" onAction="#closeWindow" prefHeight="40.0" prefWidth="120.0" text="Cancel" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
